/*
Посчитать количество строчных (маленьких) и прописных(больших) букв в строке. Учитывать только английские буквы.
 */

public class Test2 {

    //Main

    public static void main(String[] arg) {

        String string = "Smdkvcmnsksdml33464вьовослчыsjsdJDjDJFDJSFv";


        int countUpperChars = 0;
        int countNotUpperChars = 0;

        for (int i = 0; i < string.length(); i++) {
            if(string.charAt(i)>='a'&&string.charAt(i)<='z'){
                countNotUpperChars++;
            }
            if(string.charAt(i)>='A'&&string.charAt(i)<='Z'){
                countUpperChars++;
            }

        }

        System.out.print(countUpperChars+" "+ countNotUpperChars);
    }
}
