import java.util.Scanner;

public class Test1 {
    public static void main(String[] arg) {
        boolean x = false;
        Scanner scanner = new Scanner(System.in);
        System.out.println("Введите угол 1");
        int scan1 = scanner.nextInt();
        System.out.println("Введите угол 2");
        int scan2 = scanner.nextInt();

        if (scan1+scan2<180) {
            System.out.println("Такой треугольник существует");
            if ((scan1+scan2==90) | (scan1 == 90) | (scan2 == 90)) {
                System.out.println("Треугольник прямоугольный");
            }
            else System.out.println("Треугольник не прямоугольный");

            }
        else System.out.println("Такого треугольника не существует");
    }
}
